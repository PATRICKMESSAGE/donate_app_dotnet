@model List<GiveApp.Controllers.UserRoleViewModel>

@{
    ViewData["Title"] = "User Management";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>User Management</h2>
        <a href="@Url.Action("CreateUser", "Admin")" class="btn btn-success">Create New User</a>
    </div>
    
    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Roles.Any())
                                {
                                    <span class="badge bg-primary">@string.Join("</span> <span class=\"badge bg-primary\">", user.Roles)</span>
                                }
                                else
                                {
                                    <span class="text-muted">No roles assigned</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("EditUser", "Admin", new { id = user.UserId })" class="btn btn-sm btn-warning">Edit</a>
                                <a href="@Url.Action("DeleteUser", "Admin", new { id = user.UserId })" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>