<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GiveApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GiveApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">GiveApp</a>
            </div>
        </nav>
    </header>

    <div class="container mt-4 flex-grow-1">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white mt-auto py-3" style="width:100%; margin-bottom:0; padding-bottom:0;">
        <div class="container text-center">
            <div class="mb-2">
                <span>GiveApp &copy; @DateTime.Now.Year &mdash; Making a difference together.</span>
            </div>
            <div>
                <a href="https://wa.me/your-number" class="text-white me-3" target="_blank" title="WhatsApp"><i class="bi bi-whatsapp"></i></a>
                <a href="https://x.com/your-handle" class="text-white me-3" target="_blank" title="X"><i class="bi bi-twitter-x"></i></a>
                <a href="https://facebook.com/your-page" class="text-white me-3" target="_blank" title="Facebook"><i class="bi bi-facebook"></i></a>
                <a href="https://twitter.com/your-handle" class="text-white me-3" target="_blank" title="Twitter"><i class="bi bi-twitter"></i></a>
                <a href="https://instagram.com/your-handle" class="text-white" target="_blank" title="Instagram"><i class="bi bi-instagram"></i></a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>