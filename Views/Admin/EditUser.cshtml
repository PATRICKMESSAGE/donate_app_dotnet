@model GiveApp.Models.UserEditViewModel

@{
    ViewData["Title"] = "Edit User";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
    <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                     <h3>Edit User: @Model.Email</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditUser" method="post">
                        <input type="hidden" asp-for="UserId" />
                        
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Roles</label>
                            <div>
                                @foreach (var role in Model.AllRoles)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="Roles" value="@role" 
                                               id="role-@role" @(Model.Roles.Contains(role) ? "checked" : "") />
                                        <label class="form-check-label" for="role-@role">@role</label>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Update User</button>
                            <a href="@Url.Action("Users", "Admin")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>