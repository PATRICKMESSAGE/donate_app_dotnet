@model GiveApp.Models.DonateViewModel

@{
    ViewData["Title"] = "Donate";
    Layout = "_Layout";
}

<h2>Donate</h2>

<form asp-action="Donate" method="post" class="mt-4">
    <div class="mb-3">
        <label asp-for="Amount" class="form-label">Amount</label>
        <input asp-for="Amount" class="form-control" type="number" min="1" step="0.01" required />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email (optional)</label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Payment Method</label>
        <select asp-for="PaymentMethod" class="form-control" required>
            <option value="">Select a payment method</option>
            <option value="Ecocash">Ecocash</option>
            <option value="Visa">Visa</option>
            <option value="Bank">Bank</option>
            <option value="PesePay">PesePay</option>
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Donate</button>
</form>
