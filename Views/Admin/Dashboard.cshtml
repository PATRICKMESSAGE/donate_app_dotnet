@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Admin Dashboard</h2>
    
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">User Management</h5>
                    <p class="card-text">Manage users and their roles</p>
                    <a href="@Url.Action("Users", "Admin")" class="btn btn-primary">Manage Users</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Role Management</h5>
                    <p class="card-text">Create and manage user roles</p>
                    <a href="@Url.Action("Roles", "Admin")" class="btn btn-primary">Manage Roles</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Site Analytics</h5>
                    <p class="card-text">View site statistics and reports</p>
                    <a href="#" class="btn btn-primary">View Analytics</a>
                </div>
            </div>
        </div>
    </div>
</div>